<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezpz.pos.activity.LoadMemcachedCashier">

    <ImageView
        android:id="@+id/imageSplashScreen"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logosplashscreen"
        />
    <TextView
        android:layout_below="@id/imageSplashScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Getting data from server..."/>
</RelativeLayout>
